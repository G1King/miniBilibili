.nav{
white-space: nowrap;
padding: 5rpx 0;
}
.nav_item{
  display: inline-block;
  padding: 20rpx 45rpx;
  font-size: 30rpx;
}
.active {
  border-bottom: 5rpx solid #de688b;
}
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
  margin-top: 10rpx;
}
.video_wrap .video_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video-image-wrap{
  position: relative;
}
.video-image-wrap image{
  width: 100%;
  border-radius: 15rpx;
}
.video-info{
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.video-desc{
   font-size: 28rpx;

  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}